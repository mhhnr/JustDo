---
import ThemeToggle from './ThemeToggle.astro';
import { Image } from 'astro:assets';
import starkLogo from '../assets/stark.png';
import huggingFaceLogo from '../assets/hugging-face.svg';
---

<header class="fixed top-0 w-full bg-background-primary/90 dark:bg-background-dark/90 backdrop-blur border-b border-gray-200 dark:border-gray-700 z-50">
  <a href="#main" class="skip-to-content">Skip to main content</a>
  <div class="container mx-auto px-4 flex justify-between items-center h-16">
    <div class="logo flex items-center gap-2">
      <a href="/" class="text-h4 font-bold text-text-primary dark:text-white hover:text-text-secondary transition-colors">
        MHHNR
      </a>
      <Image 
        src={starkLogo} 
        alt="Stark Direwolf" 
        class="h-8 w-auto dark:invert" 
      />
    </div>
    
    <div class="flex items-center">
      <nav 
        id="mainNav" 
        class="fixed md:static top-0 -right-full md:right-0 
               h-screen md:h-auto w-full md:w-auto
               bg-background-primary dark:bg-background-dark md:bg-transparent
               transition-[right] duration-300
               pt-20 md:pt-0 px-4 md:px-0
               md:mr-4"
        aria-label="Main navigation"
      >
        <ul class="flex flex-col md:flex-row gap-6 md:gap-8 text-lg md:text-base">
          <li><a href="/projects" class="block text-text-primary dark:text-white hover:text-text-secondary transition-colors">Projects</a></li>
          <li><a href="/study" class="block text-text-primary dark:text-white hover:text-text-secondary transition-colors">Study</a></li>
        </ul>
      </nav>

      <div class="flex items-center gap-4">
        <ThemeToggle />
        <button 
          id="menuBtn"
          class="md:hidden flex flex-col gap-1.5 p-2 z-50"
          aria-label="Toggle menu"
          aria-expanded="false"
          aria-controls="mainNav"
        >
          <span class="block w-6 h-0.5 bg-text-primary dark:bg-white transition-transform"></span>
          <span class="block w-6 h-0.5 bg-text-primary dark:bg-white transition-transform"></span>
          <span class="block w-6 h-0.5 bg-text-primary dark:bg-white transition-transform"></span>
        </button>
      </div>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('menuBtn');
  const mainNav = document.getElementById('mainNav');

  menuBtn?.addEventListener('click', () => {
    mainNav?.classList.toggle('right-0');
  });
</script> 