---
import { Image } from 'astro:assets';
import hari from '../assets/hari.png';
import dragon from '../assets/dragon.png';
---

<main id="main" class="container mx-auto px-2 py-4">
  <div class="flex flex-row items-center justify-center gap-2 sm:gap-4 md:gap-8 max-w-6xl mx-auto">
    <div class="w-1/5">
      <Image 
        src={hari} 
        alt="Taekwondo fighter in protective gear" 
        class="w-full h-auto object-contain scale-[0.3] sm:scale-[0.4] md:scale-50"
        loading="eager"
      />
    </div>
    
    <div class="w-3/4">
      <Image 
        src={dragon} 
        alt="Fire breathing dragon" 
        class="w-full h-auto object-contain scale-100 sm:scale-150 md:scale-200"
        loading="eager"
      />
    </div>
  </div>
</main>

<style>
  @media (max-width: 640px) {
    .container {
      padding: 0.5rem;
    }
  }
</style> 