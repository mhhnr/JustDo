---
import hari from '../assets/hari.png';
import dragon from '../assets/dragon.png';
---

<main id="main" class="container mx-auto px-4 py-12">
  <div class="flex flex-col md:flex-row items-center justify-between gap-8">
    <div class="w-full md:w-1/3 bg-gray-100">
      <img 
        src={hari} 
        alt="Taekwondo fighter in protective gear" 
        class="w-full h-auto object-contain"
        loading="eager"
      />
    </div>
    
    <div class="w-full md:w-1/2 bg-gray-100">
      <img 
        src={dragon} 
        alt="Fire breathing dragon" 
        class="w-full h-auto object-contain scale-125"
        loading="eager"
      />
    </div>
  </div>
</main>

<style>
  main {
    padding: 1rem;
    max-width: 800px;
    margin: 0 auto;
  }

  h1 {
    margin-bottom: 2rem;
  }

  ul {
    list-style: none;
    padding: 0;
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
  }

  a {
    color: #333;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  a:hover {
    color: #666;
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .flex-col {
      align-items: center;
      text-align: center;
    }
    
    img {
      max-width: 80%;
      margin: 0 auto;
    }
  }
</style> 